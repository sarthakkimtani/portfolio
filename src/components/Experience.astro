---
import Section from "./Section.astro";
import experienceContent from "../content/experience.json";

const { experience } = experienceContent;
---

<Section id="experience" title="Experience">
  {
    experience.map((exp) => (
      <div class="mb-4 flex w-full flex-col items-start">
        <h4 class="mb-2 text-lg font-semibold text-gray-800">{exp.title}</h4>
        <p class="text-base text-gray-500">{exp.company}</p>
        <p class="text-base text-gray-500">{exp.date}</p>
        <ul class="mt-4 mb-2 list-outside list-disc pl-4 text-base text-gray-700">
          {exp.description.map((item) => (
            <li class="mb-3 ml-2">{item}</li>
          ))}
        </ul>
        <div class="my-4 h-[1px] w-full bg-gray-300" />
      </div>
    ))
  }
</Section>
