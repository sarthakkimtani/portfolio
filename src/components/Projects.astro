---
import { Icon } from "astro-icon/components";
import ProjectCard from "./ProjectCard.astro";
import * as projectContent from "../content/projects.md";

const { projects } = projectContent.frontmatter;
---

<section
  id="projects"
  class="mt-10 flex w-full flex-col p-10 lg:w-3/4 lg:flex-row"
>
  <p
    class="top-24 mb-6 w-full self-start text-lg font-semibold lg:sticky lg:mb-0 lg:w-1/3"
  >
    Projects
  </p>
  <div class="w-full text-base leading-relaxed lg:w-2/3 lg:pl-16">
    {projects.map((project: Project) => <ProjectCard project={project} />)}
    <a
      href="https://github.com/sarthakkimtani/"
      class="rounded-full border border-gray-700 px-4 py-2 text-lg text-gray-700 transition-all duration-200 hover:border-gray-900 hover:text-gray-900"
      target="_blank"
    >
      All Projects
      <Icon name="arrow-up-right" class="ml-1 inline-block text-gray-700" />
    </a>
  </div>
</section>
