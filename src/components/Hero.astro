---
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import { Icon } from "astro-icon/components";

import Profile from "../assets/profile.jpg";

const heroContent = await getEntry("hero", "hero");
if (!heroContent) throw new Error("Could not find data");

const { location, email, currently, previously, intro } = heroContent.data;
---

<div class="flex flex-row items-end w-2/3 my-32 p-10">
  <div class="flex flex-col w-1/2 mt-10">
    <div class="flex flex-row items-center">
      <Icon name="map" class="w-5 h-5 mr-1" />
      <p class="text-base font-semibold">{location}</p>
    </div>
    <div class="flex flex-row items-center mt-2">
      <Icon name="mail" class="w-5 h-5 mr-2" />
      <a href={`mailto:${email}`} class="text-base font-semibold underline hover:text-gray-500">
        {email}
      </a>
    </div>
    <div class="flex flex-col mt-14 font-semibold text-base">
      <p class="text-gray-400 font-thin">CURRENTLY</p>
      <div class="mt-2 text-black ml-2">
        {currently.map((item: string) => <p set:html={item} />)}
      </div>
    </div>
    <div class="flex flex-col mt-14 font-semibold text-base">
      <p class="text-gray-400 font-thin">PREVIOUSLY</p>
      <div class="mt-2 text-black ml-2">
        {previously.map((item: string) => <p set:html={item} />)}
      </div>
    </div>
  </div>
  <div class="flex flex-col w-1/2 items-start pl-16">
    <Image
      src={Profile}
      draggable={false}
      loading="eager"
      alt="Sarthak Kimtani"
      class="rounded-[75px] h-60 w-60"
    />
    <h4 class="text-xl font-medium mt-14">
      I'm Sarthak Kimtani â€” Software Engineer
      <span class="text-gray-400"> {intro}</span>
    </h4>
  </div>
</div>
